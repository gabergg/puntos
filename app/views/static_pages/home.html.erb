<% if signed_in? %>
    <div class="container">
      <div class="row">
        <aside class="span4">
          <section>
            <%= render 'shared/user_info' %>
          </section>
          <section>
            <%= render 'shared/habit_form' %>
          </section>
        </aside>
        <div class="span8">
          <h3>My Day</h3>
          <%= render 'shared/date_form' %>
          <%= render 'shared/daily_list' %>
        </div>
      </div>
    </div>
<% else %>
    <div class="row-fluid">
      <div class="wordcontainer text-center">
        <div class="words">
          <h1>Welcome to Free Puntos!</h1>

          <h2>
            Free Puntos is a daily habit tracker by Gabe Grazier G'Sell
          </h2>
          <div class="text-center">
            <%= link_to "Sign up now!", signup_path,
                        class: "btn btn-large btn-primary" %>
          </div>
        </div>
      </div>
      <%= image_tag("bg.jpg", :id =>"home_banner" )%>

    </div>
<% end %>