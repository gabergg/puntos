<% provide(:title, 'Habits') %>
<h1>Habits</h1>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span8">
    <% if @user.habits.any? %>
        <h3> Habits </h3>
        <ul>
          <%= render @habits %>
        </ul>
    <% end %>
  </div>
</div>